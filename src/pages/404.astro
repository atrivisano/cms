---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404: Not Found">
	<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 text-center">
		<h1 class="text-4xl font-bold text-gray-900 mb-4">404: Page Not Found</h1>
		<p class="text-lg text-gray-600 mb-8">The page you're looking for doesn't exist or has been moved.</p>
		<a href="/" class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700">
			Go back home
		</a>
	</main>
</Layout>